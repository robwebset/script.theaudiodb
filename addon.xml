<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.theaudiodb.sync" name="TheAudioDB" version="0.0.1" provider-name="robwebset">
	<requires>
		<import addon="xbmc.python" version="2.24.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
	</requires>
  	<extension point="xbmc.python.script" library="default.py"/>
	<extension point="xbmc.service" library="service.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Script to synchronise data from theaudiodb.com</summary>
		<description lang="en">Supplies various options to synchronise artist data between theaudiodb.com and your Kodi library</description>
		<language></language>
		<platform>all</platform>
		<license>See LICENSE.txt</license>
		<forum></forum>
		<source>https://github.com/robwebset/script.theaudiodb</source>
		<news>Available from the robwebset and URepo repositories</news>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
			<banner>resources/banner.jpg</banner>
			<logo>resources/logo.png</logo>
		</assets>
	</extension>
</addon>
